                <div class="item">
                    <img src="byke.jpg" alt="first pic">
                </div>
            </div>
            <ul class="indicators">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>

    </div>
    
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var stopSlide = false;
        var count = 0
        var imagesCount = $(".myCarousel-inner .item").length;
        var imageDivWidth = $(".myCarousel-inner .item").width();

        $(".myCarousel-inner .item").mouseleave(function () {
            stopSlide = false;
        });
        $(".myCarousel-inner .item").mouseenter(function () {
            stopSlide = true;
        });

        $("#myCarousel ul.indicators li").click(function () {
            stopSlide = true;
            stopSlide = false;
            count = $(this).index();
            $("#myCarousel li").removeClass("active");
            $("#myCarousel li:nth-of-type(" + count + ")").addClass("active");
        });
        setInterval(function () {
            if (stopSlide !== true) {
                if (count === imagesCount)
                    count = 0;

                $('.myCarousel-inner').css('margin-left', -imageDivWidth * count);
                count = count + 1;
                $("#myCarousel li").removeClass("active");
                $("#myCarousel li:nth-of-type(" + count + ")").addClass("active");
            }
        }, 2000);
    });


</script>
