<script type="text/javascript" src="jquery.min.js"></script>

<style type="text/css">
   #myCarousel {
        width: 1000px;
        height: 300px;
        overflow: hidden;
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }

        #myCarousel .myCarousel-inner {
            width: 4000px;
            height: 300px;
            overflow: hidden;
        }

        #myCarousel .item {
            display: inline-block;
            float: left;
            height: 300px;
            width: 1000px;
            background-color: rgba(128, 128, 128, 0.19);
        }

            #myCarousel .item img {
                height: 300px;
                width: 900px;
                margin-left: 50px;
            }

        #myCarousel .indicators {
            position: absolute;
            left: 400px;
            top: 220px;
        }

            #myCarousel .indicators li {
                text-decoration: none;
                display: inline-block;
                width: 10px;
                height: 10px;
                border: 1px solid black;
                margin-left: 20px;
                cursor:pointer;
                border-radius:5px;
            }

                #myCarousel .indicators li.active {
                    background-color: white;
                }
                #myCarousel .indicators li:hover {
                    background-color: lightgray;
                }

</style>

<div class="whole-container">

    <div class="slider">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="myCarousel-inner" role="listbox">
                <div class="item active">
                    <img src="download1.jpg" alt="first pic">
                </div>

                <div class="item">
                    <img src="download.jpg" alt="first pic">
